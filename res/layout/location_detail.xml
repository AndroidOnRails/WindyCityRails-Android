<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<LinearLayout
	    android:layout_width="fill_parent"
    	android:layout_height="?android:attr/listPreferredItemHeight"    
    	android:orientation="vertical" >
  	  <com.github.droidfu.widgets.WebImageView
		        android:id="@+id/picture_location_detail"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:padding="10dp" />
  	  <TextView android:id="@+id/venue_location_detail" 
	  			android:layout_width="fill_parent" 
	  			android:layout_height="wrap_content"
	  			android:padding="10dp"
	  			style="@style/detail_location_name" />
	  <TextView android:id="@+id/address_location_detail" 
	  			android:layout_width="fill_parent" 
	  			android:layout_height="wrap_content"
	  			android:padding="10dp" 
	  			style="@style/detail_address" />
	  <RelativeLayout
	  		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:orientation="horizontal">
    		<TextView android:id="@+id/directions_location_detail"
				android:layout_width="fill_parent" 
	  			android:layout_height="wrap_content"
	  			android:padding="10dp" 
	  			style="@style/directions_location_detail"
	  			android:text="@string/directions_button" />
	  		<ImageView 
				android:id="@+id/session_disclosure_image"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 	
				style="@style/disclosure_image" />
		</RelativeLayout>	
	</LinearLayout>
</ScrollView>
