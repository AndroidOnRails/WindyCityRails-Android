<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="detail_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/wc_text</item>
    </style>
    <style name="detail_presenter">
        <item name="android:textSize">21sp</item>
    </style>
    <style name="detail_bio">
      <item name="android:typeface">serif</item>
       	<item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/wc_text</item>
    </style>
    <style name="detail_description">
    	<item name="android:typeface">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/wc_text</item>
    </style>
    <style name="sponsor_detail_description" parent="detail_description">
    	<item name="android:paddingLeft">6dp</item>
		<item name="android:paddingRight">6dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
    </style>
    <style name="detail_header">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="detail_url">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="detail_address">
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="detail_location_name">
        <item name="android:textStyle">bold</item>
	    <item name="android:textSize">18dp</item>
	    <item name="android:textColor">@color/wc_white</item>
        <item name="android:background">@color/wc_main</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="WcrTheme" parent="@android:style/Theme.Light.NoTitleBar">
    	<item name="android:tabWidgetStyle">@style/LightTabWidget</item>
	</style>
	<style name="LightTabWidget" parent="@android:style/Widget.TabWidget">
	    <item name="android:textColor">@drawable/tab_main_selector</item>
	    
	</style>
	<style name="disclosure_image">
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:paddingRight">4dp</item>
		<item name="android:src">@drawable/disclosure</item>
	</style>
	<style name="directions_location_detail">
	 	<item name="android:textStyle">bold</item>
	    <item name="android:textSize">18dp</item>
	    <item name="android:textColor">@color/wc_white</item>
	    <item name="android:background">@color/wc_main</item>
	</style>
	<style name="wcListSeparator" parent="@android:attr/listSeparatorTextViewStyle">
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:paddingTop">2dp</item>
	    <item name="android:paddingBottom">3dp</item>
	    <item name="android:paddingLeft">5dp</item>
	    <item name="android:background">@color/wc_main</item>
	    <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
	    <item name="android:shadowColor">#100000</item>
	    <item name="android:shadowRadius">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">18dp</item>
	    <item name="android:textColor">@color/wc_white</item>
  </style>
</resources>
